<table class="min-w-full leading-normal">
	<thead>
		<tr>
			<th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
				Author
			</th>
			<th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
				Commit
			</th>
			<th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
				Message
			</th>
			<th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
				Status
			</th>
			<th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
				Date
			</th>
			<th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
				Actions
			</th>
		</tr>
	</thead>
	<tbody>
		{% if deployments.docs.length %}
			{% for deployment in deployments.docs %}
				<tr>
					<td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">
						<div class="flex items-center">
							<div class="flex-shrink-0 w-10 h-10">
								<img class="w-full h-full rounded-full" src="{{ deployment.sender.avatar_url }}" alt=""/>
							</div>
							<div class="ml-3">
								<p class="text-gray-900 whitespace-no-wrap">
									{{ deployment.sender.login }}
								</p>
							</div>
						</div>
					</td>
					<td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">
						<p class="text-gray-900 whitespace-no-wrap">
							<a href="{{ deployment.head_commit.url }}" target="_blank" class="rounded bg-gray-700 text-white px-2 py-1">
								{{ deployment.shortCommitId }}
							</a>
						</p>
					</td>
					<td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">
						<p class="text-gray-900 whitespace-no-wrap">
							{{ deployment.head_commit.message }}
						</p>
					</td>
					<td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">
						<span class="relative inline-block px-3 py-1 font-semibold text-green-900 leading-tight">
							<span aria-hidden class="absolute inset-0 {{ deploymentStatusClass[deployment.status] }} opacity-50 rounded-full"></span>
							<span class="relative uppercase">{{ deployment.status }}</span>
						</span>
					</td>
					<td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">
						<p>{{ deployment.lastDeploy }}</p>
					</td>
					<td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">
						<a href="{{ url("dashboard/apps/deployments", deployment.appId, "view", deployment._id) }}" class="flex cursor-pointer font-semibold leading-tight px-4 py-2 rounded-full text-sm tracking-wider uppercase">
							<span>View</span>
						</a>
					</td>
				</tr>
			{% endfor %}

		{% else %}

			<tr>
				<td colspan="6" class="bg-white font-semibold p-5 text-center uppercase">
					<span class="mr-2">
						<i class="fa fa-info-circle"></i>
					</span>
					No Records found</td>
			</tr>

		{% endif %}
	</tbody>
</table>
